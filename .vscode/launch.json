    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI Test",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "python": "${workspaceRoot}/venv/bin/python",
            "module": "gunicorn",
            "args": [
                "main:app",
                "--reload",
            ],
            "cwd": "${workspaceFolder}/app",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ],
            "envFile": "${workspaceFolder}/local.env",
            "preLaunchTask": "set_environment",
            "postDebugTask": "killdebugger"
        }
    ]
}